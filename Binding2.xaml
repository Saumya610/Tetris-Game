<Window x:Class="ShowingBinding.Binding2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowingBinding"
        mc:Ignorable="d"
        Title="Binding2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Name="stk">
            <TextBox Name="inpId"/>
            <TextBox Name="inpFN"/>
            <TextBox Name="inpLn"/>
        </StackPanel>
        <StackPanel Name="stk1" Grid.Column="1">
            <TextBlock Name="txtId"/>
            <TextBlock Name="txtFName"/>
            <TextBlock Name="txtLName"/>
        </StackPanel>
        <StackPanel Name="stk2" Grid.Column="2">
            <TextBlock Name="txtId2"/>
            <TextBlock Name="txtFName2"/>
            <TextBlock Name="txtLName2"/>
        </StackPanel>
        <StackPanel Name="stk3" Grid.Column="3">
            <TextBlock Name="txtId3"/>
            <TextBlock Name="txtFName3"/>
            <TextBlock Name="txtLName3"/>
        </StackPanel>
    </Grid>
</Window>
